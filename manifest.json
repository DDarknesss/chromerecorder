{
    "name": "Recording extension",
    "short_name": "Recorder",
    "version": "1.0",
    "description": "This extension allow user to record current tab or screen",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2,
    "incognito": "split",
    "background": {  
        "scripts": ["js/jquery-3.4.1.min.js","js/background.js" ],
        "persistent": false
      },
    "permissions": ["tabs", "tabCapture" , "activeTab", "desktopCapture" , "<all_urls>"],
    "icons": {
        "128": "img/icon.png"
    }   
}